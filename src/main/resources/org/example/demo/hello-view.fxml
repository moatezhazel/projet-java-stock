                            <GridPane hgap="10" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints halignment="RIGHT" prefWidth="100" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>

                                <Label text="Article:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <ComboBox fx:id="comboArticleCommandeExterne" promptText="Sélectionner un article" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Quantité:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                            <HBox alignment="CENTER" spacing="10">
                                <Button onAction="#supprimerService" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Supprimer" />
                                <Button onAction="#rechercherService" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Rechercher" />
                                <Button onAction="#resetService" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Réinitialiser" />
                            </HBox>
                        </VBox>

                        <!-- Tableau des services -->
                        <VBox spacing="10" HBox.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label text="Recherche:" />
                                <TextField fx:id="rechercherSPI" onKeyTyped="#rechercherServiceParID" promptText="Recherche par ID" HBox.hgrow="ALWAYS" />

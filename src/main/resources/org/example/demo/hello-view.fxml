                                        </padding>
                                        <HBox.margin>
                                            <Insets left="50.0" right="50.0" />
                                        </HBox.margin>
                                    </Button>
                                    <Button onAction="#rechercherArticle" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Rechercher">
                                        <HBox.margin>
                                            <Insets bottom="10.0" />
                                        </HBox.margin>
                                    </Button>
                                </children>
                            </HBox>
                        </VBox>

                        <!-- Tableau des articles -->
                        <VBox spacing="10" HBox.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="10">

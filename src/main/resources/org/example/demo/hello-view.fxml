                            <HBox alignment="CENTER" spacing="10">
                                <Button onAction="#supprimerFournisseur" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Supprimer" />
                                <Button onAction="#rechercherFournisseur" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Rechercher" />
                                <Button onAction="#resetFournisseur" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Réinitialiser" />
                            </HBox>
                        </VBox>

                        <!-- Tableau des fournisseurs -->
                        <VBox spacing="10" HBox.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label text="Recherche:" />
                                <TextField fx:id="rechercherFournisseur" onKeyTyped="#rechercherFournisseurParRef" promptText="Recherche par référence" HBox.hgrow="ALWAYS" />
                                <Button onAction="#rechercherFournisseur" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Rechercher" />
                            </HBox>

                            <TableView fx:id="tableFournisseur" onMouseClicked="#handleSelection3">
                                <columns>
                                    <TableColumn fx:id="IdFournisseur" prefWidth="100" text="ID" />
                                    <TableColumn fx:id="NomFournisseur" prefWidth="150" text="Nom" />
                                    <TableColumn fx:id="AdresseFournisseur" prefWidth="200" text="Adresse" />
                                    <TableColumn fx:id="ContactFournisseur" prefWidth="150" text="Contact" />
                                </columns>
                            </TableView>
                        </VBox>
                    </HBox>
                </VBox>
            </AnchorPane>

            <!-- Service Management Page -->
            <AnchorPane fx:id="panedeService" style="-fx-padding: 20;" visible="false">

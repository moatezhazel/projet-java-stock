                    <HBox spacing="20">
                        <!-- Formulaire de fournisseur -->
                        <VBox prefWidth="300" spacing="10" style="-fx-background-color: #f5f5f5; -fx-background-radius: 10; -fx-padding: 15;">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Informations Fournisseur" />

                            <GridPane hgap="10" vgap="10">

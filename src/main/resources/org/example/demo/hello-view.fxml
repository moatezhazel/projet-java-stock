                                <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="nomFournisseur" promptText="Nom fournisseur" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="adresseFournisseur" promptText="Adresse" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Contact:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <TextField fx:id="contactFournisseur" promptText="Contact" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>

                            <Separator />

                            <HBox alignment="CENTER" spacing="10">
                                <Button onAction="#ajouterFournisseur" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Ajouter" />
                                <Button onAction="#modifierFournisseur" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Modifier" />

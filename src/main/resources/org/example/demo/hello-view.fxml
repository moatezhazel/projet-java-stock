            <!-- Local Management Page -->
            <AnchorPane fx:id="pageGestionnaireLocal" style="-fx-padding: 20;" visible="false">
                <VBox spacing="20">
                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestion des Locaux" />

                    <HBox spacing="20">
                        <!-- Formulaire de local -->
                        <VBox prefWidth="300" spacing="10" style="-fx-background-color: #f5f5f5; -fx-background-radius: 10; -fx-padding: 15;">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Informations Local" />

                            <GridPane hgap="10" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints halignment="RIGHT" prefWidth="80" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>

                                <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="nomLocal" promptText="Nom du local" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <ComboBox fx:id="typeLocal" promptText="Type de local" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>

                            <Separator />

                            <HBox alignment="CENTER" spacing="10">
                                <Button onAction="#ajouterLocal" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Ajouter" />
                                <Button onAction="#modifierLocal" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Modifier" />
                            </HBox>

                            <HBox alignment="CENTER" spacing="10">
                                <Button onAction="#supprimerLocal" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Supprimer" />
                                <Button onAction="#rechercherLocal" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Rechercher" />
                                <Button onAction="#resetLocal" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Réinitialiser" />
                            </HBox>
                        </VBox>

                        <!-- Tableau des locaux -->
                        <VBox spacing="10" HBox.hgrow="ALWAYS">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label text="Recherche:" />
                                <TextField fx:id="rechercheParIdLocal" onKeyTyped="#rechercherLocalParId" promptText="Recherche par ID" HBox.hgrow="ALWAYS" />
                                <Button onAction="#rechercherLocal" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Rechercher" />
                            </HBox>

                            <TableView fx:id="tableLocal" onMouseClicked="#handleSelection2">
                                <columns>
                                    <TableColumn fx:id="identifiantLocal" prefWidth="100" text="ID" />
                                    <TableColumn fx:id="NomLocal" prefWidth="200" text="Nom" />
                                    <TableColumn fx:id="TypeLocal" prefWidth="150" text="Type" />
                                </columns>
                            </TableView>
                        </VBox>
                    </HBox>
                </VBox>
            </AnchorPane>

            <!-- Supplier Management Page -->

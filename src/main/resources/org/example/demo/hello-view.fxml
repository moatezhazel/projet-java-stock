            <VBox spacing="10" style="-fx-background-color: #f5f5f5; -fx-background-radius: 10; -fx-padding: 15;" prefWidth="250">
              <Label text="Filtres et Recherche" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

              <GridPane hgap="10" vgap="10">
                <columnConstraints>
                  <ColumnConstraints prefWidth="80" halignment="RIGHT"/>
                  <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Service:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboServiceInventaire" promptText="Tous les services" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Local:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboLocalInventaire" promptText="Tous les locaux" GridPane.rowIndex="1" GridPane.columnIndex="1"/>


                <Label text="Catégorie:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="comboCategorieInventaire" promptText="Toutes les catégories" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

              <Button text="Rechercher" onAction="#rechercherInventaire" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
              <Button text="Réinitialiser" onAction="#resetInventaire" style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>

              <Separator style="-fx-padding: 10 0 10 0;"/>

              <Button text="Exporter PDF" onAction="#exporterInventairePDF" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>

            </VBox>

            <!-- Tableau d'inventaire -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
              <Label text="Inventaire des Articles" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

              <TableView fx:id="tableInventaire">
                <columns>
                  <TableColumn fx:id="colRefArticleInventaire" text="Réf." prefWidth="80"/>
                  <TableColumn fx:id="colNomArticleInventaire" text="Article" prefWidth="150"/>
                  <TableColumn fx:id="colCategorieArticleInventaire" text="Catégorie" prefWidth="100"/>
                  <TableColumn fx:id="colServiceInventaire" text="Service" prefWidth="130"/>
                  <TableColumn fx:id="colLocalInventaire" text="Local" prefWidth="130"/>
                  <TableColumn fx:id="colQuantiteInventaire" text="Quantité" prefWidth="80"/>
                  <TableColumn fx:id="colDateAffectationInventaire" text="Date" prefWidth="120"/>
                </columns>
              </TableView>

              <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label fx:id="totalItemsInventaire" text="Total: 0 articles" style="-fx-font-weight: bold;"/>
              </HBox>
            </VBox>
          </HBox>
        </VBox>

    <!-- Zone principale de contenu -->
    <center>
        <StackPane>
            <!-- Article Management Page -->
            <AnchorPane fx:id="pageGestionnaireArticle" style="-fx-padding: 20;">
                <VBox spacing="20">
                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestion des Articles" />

                    <HBox spacing="20">
                        <!-- Formulaire d'article -->
                        <VBox prefWidth="300" spacing="10" style="-fx-background-color: #f5f5f5; -fx-background-radius: 10; -fx-padding: 15;">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Informations Article" />

                            <GridPane hgap="10" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints halignment="RIGHT" prefWidth="100" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>

                                <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <TextField fx:id="nomArticle" promptText="Nom article" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Quantité:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                <TextField fx:id="qteArticle" promptText="Quantité article" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                <Label text="Quantité min:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                <TextField fx:id="qteMinArticle" promptText="Quantité minimale" GridPane.columnIndex="1" GridPane.rowIndex="2" />


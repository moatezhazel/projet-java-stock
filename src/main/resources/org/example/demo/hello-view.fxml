                <VBox spacing="20">
                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestion des Commandes Externes" />

                    <HBox spacing="20">
                        <!-- Panneau gauche pour la création de commande -->
                        <VBox prefWidth="300" spacing="15" style="-fx-background-color: #f5f5f5; -fx-background-radius: 10; -fx-padding: 15;">
                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Nouvelle Commande" />

                            <GridPane hgap="10" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints halignment="RIGHT" prefWidth="100" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>

                                <Label text="Fournisseur:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                <ComboBox fx:id="comboFournisseurCommandeExterne" promptText="Sélectionner un fournisseur" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                                    <TableColumn fx:id="tableArticle_nom" prefWidth="150.0" text="Nom" />
                                    <TableColumn fx:id="tableArticle_categorie" prefWidth="120" text="Catégorie" />
                                    <TableColumn fx:id="tableArticle_qte" prefWidth="80" text="Quantité" />
                                    <TableColumn fx:id="tableArticle_local" prefWidth="120" text="Local" />
                                    <TableColumn fx:id="tableArticle_qteMin" prefWidth="80" text="Qte Min" />
                                    <TableColumn fx:id="tableArticle_date" prefWidth="120" text="Date" />
                                </columns>
                            </TableView>
                        </VBox>
                    </HBox>
